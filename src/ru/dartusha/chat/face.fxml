        <BorderPane prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <left>
            <ListView fx:id="lvUsers" onMouseClicked="#onLvUsersClick" prefHeight="361.0" prefWidth="153.0" BorderPane.alignment="CENTER">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="ivan"/>
                            <String fx:value="petr"/>
                            <String fx:value="julia"/>
                        </FXCollections>
                    </items>
            </ListView>
            </left>
            <center>
            <ListView fx:id="lvMessages" prefHeight="361.0" prefWidth="353.0" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
    </center>
    <bottom>
        <BorderPane prefHeight="39.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <right>
                <Button fx:id="btSendMessage" mnemonicParsing="false" onMouseClicked="#onSendMessageClicked" text="Отправить" BorderPane.alignment="CENTER" />
            </right>
            <center>
                <TextField fx:id="tfMessage" onKeyPressed="#setOnKeyPressed" promptText="Сообщение:" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
    </bottom>
