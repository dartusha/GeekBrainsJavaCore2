<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane fx:controller="ru.dartusha.chat.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="25" right="25" bottom="10" left="25"/></padding>

    <Label text="Имя пользователя:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <TextField fx:id="tfLogin"  GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>

    <PasswordField fx:id="pfPassword" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button fx:id="btLogin" onAction="#onLoginClicked" text="ОК"/>
    </HBox>

    <Text fill="#FF0000" fx:id="txtLoginResult" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
</GridPane>